<?xml version="1.0" encoding="UTF-8"?>
<configuration packages="com.epam.ta.reportportal.log4j.appender">
    <properties>
        <property name="pattern">[%d{HH:mm:ss}] %-5p (%F:%L) - %m%n</property>
    </properties>
    <appenders>
        <ReportPortalLog4j2Appender name="ReportPortalAppender">
            <PatternLayout pattern="%msg%n"/>
        </ReportPortalLog4j2Appender>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true"/>
        <RollingFile
                name="FILE" fileName="testExecutionLogs.log"
                filePattern="testExecutionLogs.%d{MM-dd-yyyy-HH-mm}.log"
                ignoreExceptions="true">
            <TimeBasedTriggeringPolicy />
        </RollingFile>
    </appenders>
    <loggers>
        <root level="info">
            <appender-ref ref="LogToConsole"/>
            <appender-ref ref="ReportPortalAppender"/>
            <AppenderRef ref="FILE"/>
            <AppenderRef ref="ConsoleAppender"/>
        </root>
        <Logger name="com.epam.reportportal" additivity="false" level="off"/>
        <Logger name="ca.uhn.hl7v2" additivity="false" level="info"/>
    </loggers>
</configuration>